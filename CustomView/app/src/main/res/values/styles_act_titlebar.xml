<resources>

    <style name="SDKTitleBar"/>

    <style name="SDKTitleBar.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SDKTitleBar.SubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="SDKTitleBar.SubTitle.Left">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">false</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">#333333</item>
    </style>

    <style name="SDKTitleBar.SubTitle.Right">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:layout_alignParentLeft">false</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">#ffff0000</item>
    </style>

</resources>
